:root {
    --bg: #f4fbff;
    --panel: #ffffff;
    --muted: #6b7a8a;
    --primary: #2a8bd6;
    --primary-dark: #1f6fb0;
    --accent: #8ec8ff;
    --success: #e6ffea;
    --border: #e3eef9;
}

* { box-sizing: border-box; }
html, body { height: 100%; }
body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    background: var(--bg);
    color: #1f2d3d;
    line-height: 1.5;
    padding-bottom: 40px;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}
.nav a { color: white; text-decoration: none; font-weight: 600; margin-right: 16px; padding: 6px 10px; border-radius: 4px; }

nav { background: linear-gradient(90deg, var(--primary), var(--primary-dark)); color: white; padding: 14px 18px; display: flex; align-items: center; gap: 12px; }
nav a { color: white; text-decoration: none; font-weight: 600; margin-right: 16px; padding: 6px 10px; border-radius: 4px; }
nav a:hover { background: rgba(255,255,255,0.06); }
nav .brand { font-weight: 800; margin-right: auto; }
nav .nav-right { margin-left: auto; }

.container { max-width: 980px; margin: 26px auto; padding: 0 16px; }
.h-wrap { display:flex; align-items:center; justify-content:space-between; gap:12px; margin-bottom:18px; }
h1 { margin: 0; font-size: 26px; color: #073b57; }
h2 { margin: 0 0 10px; color: #0b3a5a; }


.admin-header { display:flex; align-items:center; justify-content:space-between; gap:12px; margin-bottom: 18px; }
.header-actions { display:flex; gap:8px; align-items:center; }

    .container {
        max-width: 980px;
        margin: 26px auto;
        padding: 0 16px;
        flex: 1 0 auto;
    }

    main.site-main { flex: 1 0 auto; }

.notice-section { background: var(--panel); border: 1px solid var(--border); padding: 14px; border-radius: 8px; box-shadow: 0 1px 4px rgba(8,24,42,0.03); }
.notice-item { padding: 10px 0; border-bottom: 1px dashed #e6f0fb; }
.notice-item:last-child { border-bottom: none; }


.card { background: var(--panel); border: 1px solid var(--border); padding: 14px; border-radius: 8px; margin-bottom: 14px; box-shadow: 0 1px 4px rgba(8,24,42,0.03); }
.panel-center { max-width: 420px; margin: 24px auto; }
.form-row { margin-bottom: 12px; }
input[type="text"], input[type="password"], input[type="number"], textarea, select {
    width: 100%; padding: 10px; border: 1px solid #d5e7fb; border-radius: 6px;
    background: linear-gradient(180deg,#ffffff,#fbfdff); font-size: 14px; color: #133041;
}
textarea { min-height: 100px; resize: vertical; }


.btn { display: inline-block; padding: 10px 14px; background: var(--primary); color: white; border: none; border-radius: 6px; cursor: pointer; font-weight: 600; text-decoration: none; }
.btn.secondary { background: #eef7ff; color: var(--primary); border: 1px solid var(--accent); }
.btn.warn { background: #ff6b6b; }
.btn:active { transform: translateY(1px); }


.alert-success { background: var(--success); padding: 10px; border: 1px solid #c7efd0; border-radius: 6px; color: #116633; margin-bottom: 12px; }
.alert-error { background: #ffecec; padding: 10px; border: 1px solid #f2b6b6; border-radius: 6px; color: #a94442; margin-bottom: 12px; }
.home-link { padding: 6px 10px; background: var(--primary-dark); color: #fff; border-radius: 4px; text-decoration: none; }


.grid { display:flex; flex-wrap:wrap; gap:16px; margin-top:12px; }
.gallery-card { width:200px; border:1px solid var(--border); border-radius:8px; overflow:hidden; background:var(--panel); }
.gallery-card img { width:100%; height:140px; object-fit:cover; display:block; }
.gallery-caption { padding:8px; font-size:13px; color:var(--muted); }


.list-card { border:1px solid var(--border); padding:10px; margin:10px 0; background:var(--panel); border-radius:6px; }


table { width:100%; border-collapse:collapse; margin-top:12px; }
th, td { text-align:left; padding:10px; border:1px solid var(--border); }
th { background:#f2f9ff; }


.small { font-size:13px; color:var(--muted); }


@media (max-width:640px) {
    .grid { gap:10px; }
    .gallery-card { width:48%; }
    nav { padding: 10px; }
    .h-wrap { flex-direction:column; align-items:flex-start; gap:8px; }
}


footer {
    margin-top: 32px;
    background: linear-gradient(180deg, rgba(42,139,214,0.06), rgba(42,139,214,0.03));
    padding: 18px 0;
    text-align: center;
    color: #0b3a5a;
    border-top: 1px solid var(--border);
}

.footer-contact { color: var(--muted); font-size: 14px; }

    .hero {
        /* Try encoded filename first, then underscore variant as fallback */
        background-image: url('../images/DJI_0432%20copy.jpg'), url('../images/DJI_0432_copy.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-color: #073b57; /* fallback color */
        position: relative;
        border-radius: 10px;
        margin-bottom: 18px;
        color: #fff;
        overflow: hidden;
        min-height: 220px;
        display: flex;
        align-items: center;
    }
    .hero::after { content: ''; position: absolute; inset: 0; background: linear-gradient(180deg, rgba(3,43,68,0.35), rgba(3,43,68,0.10)); }
    .hero .hero-inner { position: relative; z-index: 2; padding: 40px; }
    .hero h1 { font-size: 36px; margin: 0 0 8px; color: #fff; }
    .hero p { margin: 0 0 12px; color: rgba(255,255,255,0.95); }
    .cta { display:inline-block; padding:10px 14px; background:#ffffff; color:var(--primary); border-radius:6px; text-decoration:none; font-weight:700; }
